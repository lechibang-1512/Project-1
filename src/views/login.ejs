<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Inventory Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="login-body">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>ðŸ“± Phone Store</h1>
                <h2>Inventory Management System</h2>
            </div>
            
            <form class="login-form" action="/auth/login" method="POST">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message">
                        <%= error %>
                    </div>
                <% } %>
                
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required placeholder="Enter your username">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Enter your password">
                </div>
                
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" name="remember" value="true">
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                </div>
                
                <button type="submit" class="login-btn">Sign In</button>
            </form>
            
            <div class="login-footer">
                <p>Demo Accounts:</p>
                <div class="demo-accounts">
                    <div class="demo-account">
                        <strong>Admin:</strong> admin / admin123
                        <span class="role-badge admin">Full Access</span>
                    </div>
                    <div class="demo-account">
                        <strong>Manager:</strong> manager / manager123
                        <span class="role-badge manager">Inventory + Reports</span>
                    </div>
                    <div class="demo-account">
                        <strong>Staff:</strong> staff / staff123
                        <span class="role-badge staff">View Only</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Simple form validation
        document.querySelector('.login-form').addEventListener('submit', function(e) {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();
            
            if (!username || !password) {
                e.preventDefault();
                alert('Please enter both username and password.');
                return false;
            }
        });

        // Auto-fill demo accounts on click
        document.querySelectorAll('.demo-account').forEach(account => {
            account.addEventListener('click', function() {
                const text = this.textContent;
                const matches = text.match(/(\w+) \/ (\w+)/);
                if (matches) {
                    document.getElementById('username').value = matches[1];
                    document.getElementById('password').value = matches[2];
                }
            });
        });
    </script>
</body>
</html>
