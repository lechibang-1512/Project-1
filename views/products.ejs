<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="menu-container">
        <button class="hamburger" onclick="toggleMenu()">â˜°</button>
        <nav id="menu" class="hidden">
            <a href="/products">Products</a>
        </nav>
    </div>

    <div class="container">
        <h1 class="text-center">Products</h1>

        <!-- No Results Message -->
        <% if (products.length === 0) { %>
            <div class="no-results">
                <p>No phone models available.</p>
            </div>
        <% } else { %>
            <!-- Single Representative Product Card -->
            <div class="product-container">
                <div class="product-card">
                    <div class="product-info">
                        <h2 class="product-name"><%= products[0].sm_name %></h2>
                        <p class="product-maker">Brand: <%= products[0].sm_maker %></p>
                        <% if (typeof variantsCount !== 'undefined' && variantsCount > 0) { %>
                        <p class="product-variants">Available in <%= variantsCount %> variants</p>
                        <% } %>
                        <a class="product-link" href="/product/<%= products[0].id %>">See More</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        function toggleMenu() {
            document.getElementById('menu').classList.toggle('hidden');
        }

        // No addToCart function needed for simplified view
    </script>
</body>
</html>
